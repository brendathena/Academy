<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfc2a9"
    tools:context=".InputText">

    <!-- android:orientation="vertical"
    android:gravity="center_vertical" -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#55482f"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:hint="What is the best spell in the wizard world?"
        android:textColor="#4c442c"
        android:fontFamily="@font/almendra_italic"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="100dp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#55482f"
        android:fontFamily="@font/almendra_bold_italic"
        android:text="Submit"
        android:textColor="#a48b5a"
        app:layout_constraintBottom_toTopOf="@id/layoutTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />
    <RelativeLayout
        android:id="@+id/layoutTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintBottom_toTopOf="@+id/layoutImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/fktextview"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:text="Check our Fakebook page!"
            android:textColor="#4c442c"
            android:textSize="20dp"
            android:fontFamily="@font/almendra_italic"
            app:layout_constraintStart_toStartOf="parent"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Invite your friends!"
            android:layout_toEndOf="@+id/fktextview"
            android:textColor="#4c442c"
            android:textSize="20dp"
            android:fontFamily="@font/almendra_italic"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/layoutTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <ImageView
        android:id="@+id/fklogo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:clickable="true"
        android:layout_marginRight="40dp"
        />
    <ImageView
        android:id="@+id/contacts"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:clickable="true"
        android:layout_marginLeft="40dp"
        android:layout_toEndOf="@+id/fklogo"
        />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
